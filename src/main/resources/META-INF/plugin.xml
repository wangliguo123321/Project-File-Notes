<idea-plugin>
    <id>com.projectfilenotes.plugin</id>
    <name>Project File Notes </name>
    <vendor email="support@example.com" url="https://example.com">Project File Notes</vendor>
    <description><![CDATA[**Powerful and versatile code annotation tool.** This plugin supports file and class level annotations,
     automatic display in the editor, project view markers, and allows for importing/exporting annotations in Markdown format. 它支持文件/类级别批注、自动展示、项目视图标记，并支持Markdown格式的导入/导出。]]></description>

    <version>0.2.1</version>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="project-file-notes-java.xml">com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.projectfilenotes.ui.FileNotesViewer" id="File Notes" anchor="right" canCloseContents="true"/>
        <fileIconProvider implementation="com.projectfilenotes.decorators.NotesFileIconProvider"/>
        <editorFactoryListener implementation="com.projectfilenotes.listeners.EditorOpenListener"/>
        <projectService serviceImplementation="com.projectfilenotes.NotesService"/>
    </extensions>

    <actions>
        <group id="ProjectFileNotes.Group" text="Project File Notes" description="Project File Notes actions" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            
            <action id="ProjectFileNotes.ShowToolWindow" class="com.projectfilenotes.actions.ShowNotesToolWindowAction" text="Show File Notes (显示当前文件批注)" description="打开当前文件的批注显示窗口"/>
            
            <separator/>
            <action id="ProjectFileNotes.ExportMarkdown" class="com.projectfilenotes.actions.ExportNotesMarkdownAction" text="Export Notes as Markdown" description="导出项目笔记到 Markdown"/>
            <action id="ProjectFileNotes.ExportAllNotes" class="com.projectfilenotes.actions.ExportAllNotesAction" text="Export All Notes (导出所有批注文件)" description="导出所有批注为单独的 MD 文件"/>
            <action id="ProjectFileNotes.ImportMarkdown" class="com.projectfilenotes.actions.ImportNotesMarkdownAction" text="Import Notes from Markdown" description="从 Markdown 导入项目笔记"/>
        </group>
    </actions>
</idea-plugin>
